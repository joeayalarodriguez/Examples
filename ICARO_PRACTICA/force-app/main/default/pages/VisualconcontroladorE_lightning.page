    <html xmlns="http://www.w3.org/2000/sgv" xmlns:xlink="http://www.w3.org/1999/xlink" lang="en">
        <head>
           <apex:slds /> 
        </head>
        <div class="slds-scope">
            <!-- SECCION 1 ---------------------------------------------------------------->
             <apex:form >
                 <apex:pageMessages />
                 <div class="slds-section slds-is-open">
                     <h3 class="slds-section__title">
                         <button aria-controls="expando-unique-id" aria-expanded="true" class="slds-button slds-section__title-action">
                             <svg class="slds-section__title-action-icon slds-button__icon slds-button__icon_left" aria-hidden="true">
                                 <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="/assets/icons/utility-sprite/svg/symbols.svg#switch" />
                             </svg>
                             <span class="slds-truncate" title="Section Title">Cargar Oportunidad</span>
                         </button>
                     </h3>
                     <div aria-hidden="false" class="slds-section__content" id="expando-unique-id">
                       
                          <!-- BASIC GRID EXAMPLE -->
                            <div class="slds-grid slds-wrap">
                                  <!-- <div class="slds-col slds-size_2-of-6">Column 1 -->
                                  <div class="slds-col slds-size--1-of-1 slds-small-size--1-of-2 slds-medium-size--3-of-12"> <!-- estilo de box -->
                                       <div class="slds-grid">
                                          <div class="slds-col slds-size_1-of-6"><!--Column 1--></div>
                                          <div class="slds-col slds-size_4-of-6">
                                              
                                              <!--INPUTBOX INICIO-->
                                                 <div class="slds-form-element"> 
                                                     <label class="slds-form-element__label" for="text-input-id-1">Ingrese el Id de Oportunidad</label>
                                                     <div class="slds-form-element__control">
                                                         <apex:inputText styleclass="slds-input " value="{!strOportunidadEntrante}" html-placeholder="Ingrese el Id de Oportunidad" />
                                                     </div>
                                                 </div>
                                              <!--INPUTBOX FIN -->
                                              
                                          </div>
                                          <div class="slds-col slds-size_1-of-6"><!--Column 3--></div>
                                        </div>   
                                      
                                      
                                      
                                  </div>
                                  <div class="slds-col slds-size_1-of-12">
                                     <!-- Column 2  -->
                                  </div>
                                  <div class="slds-col slds-size_8-of-12">
                                      <!-- columna 3 -->
                                      <article class="slds-card">
                                          <div class="slds-card__header slds-grid">
                                              <header class="slds-media slds-media_center slds-has-flexi-truncate">
                                                  <div class="slds-media__figure">
                                                      <span class="slds-icon_container slds-icon-standard-ooportunity" title="Informaci贸n de la oportunidad">
                                                          <svg class="slds-icon slds-icon_small" aria-hidden="true">
                                                              <use xlink:href="/assets/icons/standard-sprite/svg/symbols.svg#opportunity"></use>
                                                          </svg>
                                                          <span class="slds-assistive-text">Informaci贸n de la oportunidad</span> 
                                                      </span>
                                                  </div>
                                                  <div class="slds-media__body">
                                                      <h2 class="slds-card__header-title">
                                                          <a href="javascript:void(0);" class="slds-card__header-link slds-truncate" title="Accounts">
                                                              <span>Oportunidades</span>
                                                              
                                                          </a>
                                                      </h2>
                                                  </div>
                                                  
                                              </header>
                                          </div>
                                          
                                          <div class="slds-card__body slds-card__body_inner">Informaci贸n de la oportunidad</div>
                                          <div class="slds-card__body slds-card__body_inner">{!Oportunidad.Name}</div> 
                                          <div class="slds-card__body slds-card__body_inner">{!Oportunidad.Amount}</div>
                                          <div class="slds-card__body slds-card__body_inner">{!Oportunidad.StageName}</div>
                                          <div class="slds-card__body slds-card__body_inner">{!Oportunidad.CloseDate}</div>
                                          <footer class="slds-card__footer">
                                              Informaci贸n recuperada del registro de oportunidad
                                          </footer>
                                      </article>
                                  </div> 
                              </div>                          
                      </div>
                 </div>
              
            <!-- FIN   SECCION ---------------------------------------------------------->
            
            
            <!-- SECCION 2 ---------------------------------------------------------------->
             
                 <div class="slds-section slds-is-open">
                     <h3 class="slds-section__title">
                         <button aria-controls="expando-unique-id" aria-expanded="true" class="slds-button slds-section__title-action">
                             <svg class="slds-section__title-action-icon slds-button__icon slds-button__icon_left" aria-hidden="true">
                                 <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="/assets/icons/utility-sprite/svg/symbols.svg#switch" />
                             </svg>
                             <span class="slds-truncate" title="Section Title">IMAGENES</span>
